@model Peliculas.Models.Genero

@{
    ViewData["Title"] = "Películas por Género";
}

<h2>Género: @Model.Nombre</h2>
<p>@Model.Descripcion</p>
<hr />

@if (Model.Peliculas != null && Model.Peliculas.Any())
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Poster</th>
                <th>Título</th>
                <th>Director</th>
                <th>Duración</th>
                <th>Estreno</th>
                <th style="width:220px">Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var p in Model.Peliculas)
        {
            <tr>
                <td>
                    @if (p.Poster != null && p.Poster.Length > 0)
                    {
                        var b64 = Convert.ToBase64String(p.Poster);
                        <img src="data:image/*;base64,@b64" alt="Poster" style="height:60px;object-fit:cover;border-radius:4px;" />
                    }
                    else
                    {
                        <span class="text-muted">Sin imagen</span>
                    }
                </td>
                <td>@p.Titulo</td>
                <td>
                    <a asp-controller="DirectorMVC" asp-action="Details" asp-route-id="@p.DirectorId">@p.Director?.Nombre</a>
                </td>
                <td>@p.DuracionMinutos</td>
                <td>@p.FechaEstreno.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-controller="PeliculaMVC" asp-action="Details" asp-route-id="@p.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-controller="PeliculaMVC" asp-action="Edit" asp-route-id="@p.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-controller="PeliculaMVC" asp-action="Delete" asp-route-id="@p.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="text-muted">Sin películas registradas para este género.</div>
}

<div class="mt-3">
    <a asp-controller="PeliculaMVC" asp-action="Index" asp-route-generoId="@Model.Id" class="btn btn-primary">Ver en listado filtrado</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a géneros</a>
</div>
