@model Peliculas.Models.Actor
@{
    ViewData["Title"] = "Editar Actor";
}
<div class="container py-4">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <form asp-action="Edit" class="card p-4 shadow-sm mx-auto" style="max-width:600px;">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Biografia" class="form-label"></label>
            <textarea asp-for="Biografia" class="form-control" rows="4"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="FechaNacimiento" class="form-label"></label>
            <input asp-for="FechaNacimiento" type="date" class="form-control" />
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            <button type="submit" class="btn btn-primary">Actualizar</button>
        </div>
    </form>
</div>
