@model Peliculas.Models.Actor
@{
    ViewData["Title"] = "Detalles del Actor";
}
<div class="container py-4">
    <div class="card shadow-sm p-4 mx-auto" style="max-width:600px;">
        <h3 class="text-center mb-3">@Model.Nombre</h3>
        <p><strong>Fecha de nacimiento:</strong> @Model.FechaNacimiento.ToShortDateString()</p>
        <p><strong>Biografía:</strong> @(string.IsNullOrWhiteSpace(Model.Biografia) ? "—" : Model.Biografia)</p>

        <hr />
        <h5 class="mb-3">Películas en las que participó</h5>

        @if (Model.Peliculas != null && Model.Peliculas.Any())
        {
            <table class="table table-striped table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Poster</th>
                        <th>Título</th>
                        <th>Género</th>
                        <th>Director</th>
                        <th>Duración</th>
                        <th>Estreno</th>
                        <th style="width:220px">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var ap in Model.Peliculas)  // ap = ActorPelicula
                {
                    var p = ap.Pelicula;
                    if (p == null) { continue; }

                    <tr>
                        <td>
                            @if (p.Poster != null && p.Poster.Length > 0)
                            {
                                var b64 = Convert.ToBase64String(p.Poster);
                                <img src="data:image/*;base64,@b64" alt="Poster" style="height:60px;object-fit:cover;border-radius:4px;" />
                            }
                            else { <span class="text-muted">Sin imagen</span> }
                        </td>
                        <td>@p.Titulo</td>
                        <td>
                            <a asp-controller="GeneroMVC" asp-action="Details" asp-route-id="@p.GeneroId">@p.Genero?.Nombre</a>
                        </td>
                        <td>
                            <a asp-controller="DirectorMVC" asp-action="Details" asp-route-id="@p.DirectorId">@p.Director?.Nombre</a>
                        </td>
                        <td>@p.DuracionMinutos</td>
                        <td>@p.FechaEstreno.ToString("yyyy-MM-dd")</td>
                        <td>
                            <a asp-controller="PeliculaMVC" asp-action="Details" asp-route-id="@p.Id" class="btn btn-info btn-sm">Detalles</a>
                            <a asp-controller="PeliculaMVC" asp-action="Edit" asp-route-id="@p.Id" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-controller="PeliculaMVC" asp-action="Delete" asp-route-id="@p.Id" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-muted">Sin películas registradas para este actor.</div>
        }

        <div class="text-center">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </div>
</div>
