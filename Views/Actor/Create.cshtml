@model Peliculas.Models.Actor
@{
    System.Globalization.CultureInfo.DefaultThreadCurrentCulture = new System.Globalization.CultureInfo("en-US");
    System.Globalization.CultureInfo.DefaultThreadCurrentUICulture = new System.Globalization.CultureInfo("en-US");
}

@{
    ViewData["Title"] = "Nuevo Actor";
}
<div class="container py-4">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <form asp-action="Create" method="post" asp-controller="Actor" data-ajax="false" novalidate class="card p-4 shadow-sm mx-auto" style="max-width:600px;">
    @Html.AntiForgeryToken() 
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Biografia" class="form-label"></label>
            <textarea asp-for="Biografia" class="form-control" rows="4"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="FechaNacimiento" class="form-label"></label>
            <input asp-for="FechaNacimiento" type="date" class="form-control" />
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            <button type="submit" class="btn btn-success">Guardar</button>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
