@model Peliculas.Models.Director

@{
    ViewData["Title"] = "Editar Director";
}

<h2>@ViewData["Title"]</h2>
<hr />

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Nacionalidad" class="form-label"></label>
        <input asp-for="Nacionalidad" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="FechaNacimiento" class="form-label"></label>
        <input asp-for="FechaNacimiento" class="form-control" type="date" />
    </div>

    <button type="submit" class="btn btn-warning">✏️ Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary">↩️ Volver</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
